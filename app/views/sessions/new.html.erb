<div class="well">
  <%= render 'shared/page_title', title: "Log In" %>
<div class="row">  
  <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :email,  class: "form-control", placeholder: "Enter your email " %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password,  class: "form-control", placeholder: "Enter your Password" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-md-offset-2">
        <%= f.submit "Log In", class: 'btn btn-primary btn-lg btn-xlarge' %>
      </div>
    </div>
  <% end %>
  <div class="col-sm-4 col-sm-offset-4">
    <div class="bottom-margin">
      <p>[ <%= link_to "Cancel request, return to recipes listing", recipes_path %> ]</p>
    </div>
  </div>
  </div>
</div>
