<div class="pannel container">
  <%= render 'shared/page_title', title: "Chef #{@chef.chef_name}'s Profile" %>
  
  <div class="row">
      <div class="col-md-12 center">
          <p>
            <%=  gravatar_for(@chef, size: 150) %>
          </p>
      </div>
    </div>
    <% if @chef.recipes.count != 0 %>
      <div class="center">
        <h4><%= @chef.chef_name %>'s recipes</h4>
      </div>
      <div class="center">
        <%= will_paginate @chef_recipes %>
      </div>
      <%= render 'recipes/recipe', obj: @chef_recipes %>
      <div class="center">
        <%= will_paginate @chef_recipes %>
      </div>
    <% else %>
      <h4 class="center">No Recipe yet</h4>
      <p class="center"><%= link_to "Create your first Recipe now!", new_recipe_path, class: "btn btn-success btn-md" %></p>
    <% end %>
    
</div>