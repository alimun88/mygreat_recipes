<div class="pannel panel-img container">
  <%= render 'shared/page_title', title: @recipe.name %>
  <div class="row">
    <div class="col-md-2">
      <div class="left-section center"></div>
    </div>
  <div class="well col-md-8 ">
    <h4 class="center description"><strong>Ingredients</strong></h4>
    <hr />
    <%= simple_format(@recipe.ingedients) %>
    <hr/>
    <h4 class="center description"><strong>Directions</strong></h4>
    <hr />
    <%= simple_format(@recipe.description) %>
    <hr/>
      <div class="pull-right">
        <p class="center">
          <em>Created By:</em>
        </p class="center">
        <p class="center">
          <%= link_to gravatar_for(@recipe.chef), recipes_path %>
        </p>
       
        <p class="center">
          <small><%= @recipe.chef.chef_name.capitalize  %></small>
        <div class="pull-right">Created:
          <%= time_ago_in_words(@recipe.created_at) %> ago</p>
        </div>
      </div>
      <div class="recipe-action">
        <%= link_to "Edit Recipe", edit_recipe_path(@recipe), class: "btn btn-xs btn-info" %>
        <%= link_to "Delelte Recipe", recipe_path(@recipe), method: :delete, 
                    data: { confirm: "Are you sure you want to delete this recipe?" }, class: "btn btn-xs btn-danger" %>
        <%= link_to "Return to Recipe Listing", recipes_path, class: "btn btn-xs btn-warning" %>
      </div>
    </div>
    <div class="col-md-2">
      <section class="right-section center"></section>
    </div>
  </div>
</div>