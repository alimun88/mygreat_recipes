<div class="pannel">
  <h1 align="center">Listing all Recipes</h1>

  <% @recipes.each do |recipe| %>
    <div class="row">
      <div class="col-md-2">
        <section class="center">
          
        </section>
      </div>
      <div class="col-md-8 well">
        <h4><%= recipe.name %></h4>
        <p><%= recipe.description %></p>
        <p> 
         <span class="quiet"> <small>By chef_id: <%= recipe.chef_id %> Created at: <%= time_ago_in_words(recipe.created_at) %> ago</small></span>
        </p>
      </div>
    </div>
  <% end %>
</div>